<resources>
    <string name="article_html_template" translatable="false"><![CDATA[
<!DOCTYPE html>
<html>
<head>
  <meta charset=\"UTF-8\">
  <style type=\"text/css\">
  /* Keep this rule at first position */
  a:link, a:active, a:hover { color: %1$s }

  body { color: %2$s; background-color: %3$s }
  blockquote { background-color: %4$s }

  body, blockquote, img, iframe, video, div, table, tbody, tr, td, pre, code, blockquote, p, em, b, span {
    max-width: 100%% !important;
  }

  * {
    word-wrap: break-word !important;
  }

  pre {
    white-space: pre-wrap !important;
  }

  body {
    font-size: 1em;
    font-weight: normal;
    margin-left: 0px;
    margin-right: 0px;
  }

  .content, .header {
    margin-left: 16px;
    margin-right: 16px;
  }

  .header {
    margin-bottom: 8px;
  }

  body, .byline, .title, a {
    transition: color 0.5s, background-color 0.5s;
  }

  blockquote {
    padding: 5px;
  }

  blockquote > p {
    margin: 0;
    padding: 0;
  }

  .title {
    font-size: 1.1em;
    font-weight: normal;
    text-decoration: none;
  }

  .byline {
    font-size: 0.8em;
    margin-top: 4px;
    margin-bottom: 0px;
    font-style: italic;
  }

  .content > p {
    margin-top: 0;
  }

  span.play {
    font-size: 3em;
    position: absolute;
    left: 50%%;
    top: 50%%;
    transform: translate(-50%%, -50%%);
    text-shadow: black 0.1em 0.1em 0.2em
  }

  img.videothumb {
    display:block;
    margin-left:auto;
    margin-right:auto;
    width:75%%;
  }
  img.headerimg {
    max-width: 100%%;
    height: auto;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 8px;
    display:block;
  }
  %10$s
  </style>

</head>
<body>
  <div class=\"header\">
    <a href=\"%5$s\" class=\"title\">%6$s</a> %7$s
  </div>
  %9$s
  <div class=\"content\">
    %8$s
  </div>
</body>
</html>
    ]]></string>
    <string name="style_change_js" translatable="false"><![CDATA[
javascript:(function() {
    document.styleSheets[0].cssRules[0].style.color=\"%1$s\";
})();
